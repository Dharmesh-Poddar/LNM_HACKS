  <!--===========================================================================================================================================Trending Section====================================================================================================================================================================-->

  <h1 style="font-family:Nunito,arial; color:#000000;text-align:center;">TRENDING MOVIES</h1>
  <br>


<div class="ui stackable grid container" style="margin-left: 7%;">
	<% data["results"].forEach(function(movie){ %>
		<div class="five wide tablet four wide computer column">
			<div class="ui fluid card">
				<div class="image">
					<% if (movie["poster_path"] === null) { %>
						<img src="https://www.directv.com/img/movies.jpg">
					<% } else { %>
						<img src='https://image.tmdb.org/t/p/w500/<%= movie["poster_path"] %>'>
					<% } %>
				</div>
				<div class="content">
	      			<div class="header">
	      				<%= movie["original_title"] %>
	      			</div>
	      			<div class="meta">
	      				<a href='/movies/<%= movie["id"] %>'>See More</a>
	      			</div>
	      		</div>
	      		<div class="extra content">
	      			<span class="right floated">
			        	Released:  <strong><%= movie["release_date"] %></strong>
			      	</span>
			      	<span>
				        <i class="star icon"></i>
				        <strong><%= movie["vote_average"] %></strong>
				    </span>
	      		</div>
			</div>
		</div>
	<% }); %>
</div>



